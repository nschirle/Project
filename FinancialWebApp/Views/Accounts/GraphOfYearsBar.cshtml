@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <title>Index</title>
</head>
<body>
    <div id="chartContainer" style="height: 500px; width: 100%;"></div>
    <div id="chartContainer2" style="height: 600px; width: 100%;"></div>
    <script type="text/javascript">

        window.onload = function () {
            CanvasJS.addColorSet("greenShades",
                [//colorSet Array

                    "#808080",
                    "#D3D3D3"
                ]);
			var chart = new CanvasJS.Chart("chartContainer", {
                colorSet: "greenShades",
                theme: "dark2",
				animationEnabled: true,
				title: {
					text: "Value of your investments over the years!"
				},
				subtitles: [
					{ text: "Make adjustments to the Investment tracker to see how you could save more." }
				],
				data: [
				{
                        type: "column", //change type to bar, line, area, pie, etc
                    dataPoints: @Html.Raw(ViewBag.DataPoints),
				}
				]
            });


            chart.render();
            chart = {};
            var chart = new CanvasJS.Chart("chartContainer2", {
                colorSet: "greenShades",
				theme: "dark2",
				animationEnabled: true,
				title: {
					text: "Value of your investments over the years adjusted for inflation!"
				},
				subtitles: [
					{ text: "Make adjustments to the Investment tracker to see how you could save more." }
				],
				data: [
				{
                        type: "column", //change type to bar, line, area, pie, etc
                    dataPoints: @Html.Raw(ViewBag.DataPointsInflation),
				}
				]
            });


            chart.render();
            chart = {};
		};
    </script>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>	